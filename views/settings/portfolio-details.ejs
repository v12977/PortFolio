  <script>

    let allportfolio=document.getElementById('allportfolio');
    for(let child of allportfolio.children){
      try{
        let p=child.children[0].children;
        p[0].addEventListener('click',()=>{
          let id=p[1].innerText;
          console.log(id);
          let portfolioconformdelete=document.getElementById('portfolioconformdelete');
          portfolioconformdelete.innerHTML=`
            <p>Are You Sure? Delete SkillName</p>
            <a class="con" href="<%=url%>/myPortFolio/delete/project/${id}"><button type="submit">Yes</button> </a>
            <a class="con" id="portfoliocencel"><button type="cancel">No</button></a>
          `;
          portfolioconformdelete.style.display='flex';
          let portfoliocencel=document.getElementById('portfoliocencel');
          portfoliocencel.addEventListener("click",()=>{
            portfolioconformdelete.style.display="none";
          });
        });
      }
      catch{
        console.log("only taken");
      }
    }



  </script>

